<%- include ('partials/header') %>
<div class="container">
    <div class="card" style="margin: 150px auto; max-width: 40%; text-align: center;">
        <h1 class="mb-4">Add new Campground</h1>
        <div class="container">
            <form class="form-group" action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <a class="btn btn-sm btn-primary" href="http://127.0.0.1:3000/campgrounds">Go Back</a>
                <button class="btn btn-md btn-success pull-right">Submit</button>
            </form>

        </div>
    </div>
</div>
<%- include ('partials/footer') %>