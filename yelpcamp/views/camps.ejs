<%- include ('partials/header') %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>This is the collection of some of the most popular campgrounds in the world</p>
            <a class="btn btn-info btn-lg" href="http://127.0.0.1:3000/campgrounds/new">Add New Campgrounds</a>
        </div>
    </header>
    <div class="row">
        <%camps.forEach((camp) => {%>
        <div class="col-md-4 col-sm-6">
            <div class="card mb-4" style="display: flex; flex-wrap: nowrap;">
                <img class="card-img-top" style="height: 200px;" src="<%= camp.image %>" alt="campground images">
                <h4 class="card-title text-center"><%= camp.name %></h4>
            </div>
        </div>
        <% }); %>
    </div>
    <%- include ('partials/footer') %>