<%- include ('../partials/header') %>
<div class="container">
    <div class="card topMargin">
        <h1 class="mb-4">Add new comment for <%= campgrounds.name %></h1>
        <div class="container">
            <form class="form-group" action="/campground/<%= campgrounds._id %>/comment" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <button class="btn btn-md btn-success pull-right">Submit</button>
            </form>
        </div>
        <a class="btn btn-sm btn-info mb-2 mx-auto" style="width: 100px;" href="/campground/<%= campgrounds._id %>">
            GoBack
        </a>
    </div>
</div>
<%- include ('../partials/footer') %>