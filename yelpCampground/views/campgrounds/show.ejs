<%- include ('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead mt-4">YelpCamp</p>
            <div class="list-group">
                <div class="list-group-item active">Item 1</div>
                <div class="list-group-item">Item 2</div>
                <div class="list-group-item">Item 3</div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mt-4">
                <img id="max" src="<%= campgrounds.image %>" alt="campground image">
                <div class="d-flex justify-content-between">
                    <h4 class="p-2"><%= campgrounds.name %></h4>
                    <span class="text-muted p-2">Rs.5000 per/night</span>
                </div>
                <p class="card-text p-2"><%= campgrounds.description %></p>
            </div>
            <div class="card my-4 colorBack">
                <div class="text-right m-3">
                    <a class="btn btn-success" href="/campground/<%=campgrounds._id%>/comment/new">Add New
                        Comment</a>
                </div>
                <hr>
                <% campgrounds.comments.forEach((comments)=>{ %>
                <div class="d-flex justify-content-between">
                    <strong class="pl-2"><%= comments.author %></strong>
                    <span class="text-muted pr-2">10 days ago </span>
                </div>
                <p class="pl-2"><%= comments.text %></p>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include ('../partials/footer') %>