<%- include ('../partials/header') %>
<div class="container">
  <div class="card topMargin colorBack">
    <h1 class="mb-4">Sign Up</h1>
    <div class="container">
      <form class="form-group" action="/register" method="post">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="Username"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Password"
          />
        </div>
        <button class="btn btn-md btn-success pull-right">Submit</button>
      </form>
    </div>
  </div>
</div>
<%- include ('../partials/footer') %>
