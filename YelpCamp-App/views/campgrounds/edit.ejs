<%- include ('../partials/header') %>
<div class="container">
  <div class="card topMargin">
    <h1 class="mb-4">Edit <%= campgrounds.name %></h1>
    <div class="container">
      <form class="form-group" action="/campground/<%= campgrounds._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name= "campground[name]"
            value="<%= campgrounds.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name= "campground[image]"
            value="<%= campgrounds.image %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name= "campground[description]"
            value="<%= campgrounds.description %>"
          />
        </div>

        <button class="btn btn-md btn-success pull-right">Submit</button>
      </form>
    </div>
    <a
      class="btn btn-sm btn-info mb-2 mx-auto"
      style="width: 100px;"
      href="/campground"
    >
      GoBack
    </a>
  </div>
</div>
<%- include ('../partials/footer') %>
