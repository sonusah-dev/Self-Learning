<%- include ('../partials/header') %>
<div class="container mt-4">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpCamp!</h1>
      <p>
        This is the collection of some of the most popular campgrounds in the
        world
      </p>
      <a class="btn btn-info btn-md" href="campground/new"
        >Add New Campgrounds</a
      >
    </div>
  </header>
  <div class="row">
    <%campgrounds.forEach((campground) => {%>
    <div class="col-md-4 col-lg-3 col-sm-6">
      <div class="card mb-4" style="display: flex; flex-wrap: nowrap;">
        <img id="length" src="<%= campground.image %>" alt="campground image" />
        <h4 class="card-title text-center"><%= campground.name %></h4>
        <a
          class="btn btn-sm btn-outline-info"
          href="/campground/<%= campground._id %>"
          >More Info</a
        >
      </div>
    </div>
    <% }); %>
  </div>
</div>
> <%- include ('../partials/footer') %>
