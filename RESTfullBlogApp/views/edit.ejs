<%- include ('partials/header') %>
<div id="newPost" class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blogs[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="blogs[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="image">Blog Content</label>
            <textarea name="blogs[comment]" cols="30" rows="10"
                placeholder="write some comment"><%= blog.comment %></textarea>
        </div>
        <input class="large ui blue basic button" type="submit">
    </form>
</div>
<%- include ('partials/footer') %>