<%- include ('partials/header') %>
<div id="newPost" class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attachment">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="blog-Image" />
      <div class="content">
        <h3><%= blog.date.toDateString() %></h3>
      </div>
      <div class="description">
        <p><%= blog.comment %></p>
      </div>
      <a id="edit" class="ui inverted orange button" href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button id="delete" class="ui inverted red button">Delete</button>
      </form>
    </div>
  </div>
</div>
<%- include ('partials/footer') %>
